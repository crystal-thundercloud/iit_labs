<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
		  android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".MainActivity">
	 <RelativeLayout
				android:layout_width="match_parent" android:layout_height="match_parent" android:baselineAligned="false">
		  <TextView
					 android:id="@+id/CENTER" android:layout_width="wrap_content" android:layout_height="wrap_content"
					 android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:text="center"
					 android:textSize="48dp"/>
		  <Button
					 android:id="@+id/LEFT"
					 android:layout_width="wrap_content" android:layout_height="wrap_content"
					 android:layout_centerVertical="true" android:layout_toLeftOf="@+id/CENTER" android:text="LEFT"/>
		  <Button
					 android:id="@+id/RIGHT" android:layout_width="wrap_content" android:layout_height="wrap_content"
					 android:layout_centerVertical="true" android:layout_toRightOf="@+id/CENTER" android:text="RIGHT"/>
		  <TextView
					 android:id="@+id/UP" android:layout_width="wrap_content" android:layout_height="wrap_content"
					 android:layout_above="@+id/CENTER" android:layout_centerHorizontal="true" android:text="UP"
					 android:textSize="48dp"/>
		  <TextView
					 android:id="@+id/DOWN" android:layout_width="wrap_content" android:layout_height="wrap_content"
					 android:layout_below="@+id/CENTER" android:layout_centerHorizontal="true" android:text="DOWN"
					 android:textSize="48dp"/>
		  <TextView
					 android:id="@+id/UPRIGHT" android:layout_width="wrap_content" android:layout_height="wrap_content"
					 android:layout_above="@+id/CENTER" android:layout_alignRight="@id/RIGHT" android:textColor="#FF0000"
					 android:textStyle="italic" android:text="UPRIGHT" android:textSize="24dp"/>
		  <TextView
					 android:id="@+id/DOWNLEFT" android:layout_width="wrap_content" android:layout_height="wrap_content"
					 android:layout_below="@+id/CENTER" android:layout_alignLeft="@id/LEFT" android:textColor="#00FF00"
					 android:textStyle="bold" android:text="DOWNLEFT" android:textSize="16dp"/>
	 </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>