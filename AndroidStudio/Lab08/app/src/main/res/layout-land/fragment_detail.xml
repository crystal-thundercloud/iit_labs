<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:padding="5dp"
        app:srcCompat="@drawable/the_transformers_logo"
        tools:srcCompat="@drawable/the_transformers_logo" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detailsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Две враждующие фракции роботов-трансформеров покидают планету Кибертрон в поисках ресурсов. Фракции совершают аварийную посадку на Земле и миллионы лет спустя заново начинают свою битву по всему земному шару."
            android:textSize="20sp" />
    </ScrollView>
</LinearLayout>
